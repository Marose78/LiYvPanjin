
.page-container {
  padding: 40rpx;
}

.form-group {
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: row;
}


.behaviorIntro-label,.behaviorImage-label {
  width: 150rpx;
  font-size: 16px;
  display: flex;
  padding-top: 10px;
  /* align-items: center; */

}
.input {
  width: 480rpx;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
  /* margin-top: 15rpx; */
}

.submit-button {
  width: 100%;
  padding: 4px;
  background-color: #ff8c00;
  color: #ffffff;
  border: none;
  border-radius: 4px;
  font-size: 17px;
  letter-spacing: 5rpx;
}

.behavior-image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 5px;
  background-color: #f4f4f4;
  display: flex;
  align-items: center;
  justify-content: center;
}
.add-icon{
  width: 90rpx;
  height: 90rpx;
}
