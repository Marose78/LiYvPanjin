.search-container {
  background-color: #F4F4F4;
  width: 680rpx;
  height: 80rpx;
  font-size: 16px;
  display: flex;
  flex-direction: row;
  border-radius: 20px;
  margin: 0 auto;
  padding-left: 20rpx;
  overflow: hidden;
}

.search-container image {
  height: 45rpx;
  width: 45rpx;
  margin: auto 0;
}

.search-container input {
  background-color: #F4F4F4;
  height: 100%;
  padding-left: 10rpx;
}

.categories {
  /* padding: 0 190rpx; */
  padding-top: 10rpx;
  display: flex;
  /* justify-content: space-; */
}

.category-title {
  width: 130rpx;
  padding: 30rpx 0;
  padding-bottom: 15rpx;
  cursor: pointer;
  text-align: center;
  font-size: 16px;
  /* font-weight: bold; */
  margin-left: 30rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  /* flex: 1; */
}

.active {
  color: #ff8c00; /* 选中时的颜色 */
  border-bottom: 3px solid #ff8c00;
}

.list-container {
  padding-top: 10rpx;
  background-color: #F4F4F4;
  display: flex;
  transition: transform 0.3s ease; /* 平滑过渡效果 */
  width: 100%; /* 容纳两个列表 */
}

.list {
  width: 100%; /* 每个列表占满容器宽度 */
  display: flex;
  flex-direction: column; /* 纵向排列卡片 */
  background-color: #F4F4F4;
}

.card {
  width: 92%;
  margin: 0 auto;
  margin-bottom: 10rpx;
  background-color: #fff;
  border-radius: 5px;
  display: flex; 
  /* align-items: center;  */
  padding: 20rpx; 
  position: relative;
}

.product-info,.service-info{
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.product-image, .service-image {
  width: 150rpx; /* 图片宽度 */
  height: 150rpx; /* 图片高度 */
  object-fit:cover;
  /* margin-right: 10rpx; */
  border-radius: 5px;
  overflow: hidden;
}

.product-name, .service-name {
  font-size: 17px; /* 名称字体大小 */
  margin-bottom: 20rpx;
}
.product-introduction,.service-introduction{
  font-size: 12px;
}

.product-price,.service-price {
  position: absolute; /* 绝对定位 */
  bottom: 20rpx; /* 距离底部的距离 */
  right: 20rpx; /* 距离右侧的距离 */
  font-size: 16px;
  color: #ff8c00; 
  /* font-weight: bold;  */
}