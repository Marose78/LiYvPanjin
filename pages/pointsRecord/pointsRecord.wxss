/* pages/points/points.wxss */
.container {
  padding: 20px 20rpx;
}

.balance {
  width: 100%;
  height: 100rpx;
  border-radius: 5px;
  align-items: center;
  display: flex;
  justify-content: center;
  background-color: #ff8c00;
  color: #ffffff;
  margin-bottom: 20px;
}
.balance-text{
  font-size: 18px;
  font-weight: bold;
}

.record-list {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.record-item {
  /* width: ; */
  display: flex;
  justify-content: space-between;
  padding: 10px;
  border-bottom: 1px solid #eee;
}

.record-time {
  color: #999;
  font-size: 15px;
}

.record-description {
  flex: 1;
  margin: 0 10px;
}

.record-points {
  font-weight: bold;
}

.gain {
  color: green;
}

.use {
  color: red;
}

.no-records {
  text-align: center;
  color: #999;
  margin-top: 50px;
}
