/* pages/home/home.wxss */
.page-container {
  background-color: #F4F4F4;
}

swiper {
  width: 700rpx;
  height: 400rpx;
  margin: 0 auto;
  border-radius: 5px;
  overflow: hidden;
}

swiper image {
  width: 100%;

}

.icon-container {
  width: 700rpx;
  height: 180rpx;
  display: flex;
  justify-content: space-around;
  margin: 20rpx auto;
  border-radius: 5px;
  background-color: #fff;
}

.icon-container image {
  display: block;
  width: 80rpx;
  height: 80rpx;
  margin: 15rpx auto;
  padding-top: 10px;
}

.icon-container text {
  display: block;
  text-align: center;
  width: 100%;
  font-size: 28rpx;
  letter-spacing: 1px;
  /* font-weight: bold; */
  /* color: #ec6554; */
}

.icon navigator {
  flex: 1;
  /* 每个 navigator 占据平等的空间 */
  text-align: center;
}
.swiper2 {
  height: 140rpx;
  margin: 0 auto;
  border-radius: 5px;
  overflow: hidden;
}
.swiper2 image{
  width: 700rpx;
  height: 140rpx;
  object-fit: contain;
}

.scroll-view {
  height: 100vh;
  overflow: hidden;
}
.newsTitle{
  width: 700rpx;
  display: block;
  margin: 20rpx auto;
 
  font-size: 15px;
  font-weight: bold;
  text-align: left;

}
.news-list {
  width: 720rpx;
  margin: 0 auto;

  display: flex;
  justify-content: space-between;
}

.column {
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.news-item {
  width: 96%;
  margin-bottom: 15rpx;
  border-radius: 5px;
  overflow: hidden;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
  background-color: #fff;
  padding-bottom: 10rpx;
}

.news-image {
  width: 100%;
  height: 200rpx;
  object-fit:contain;  /* 让图片适应容器，超出部分裁剪 */
  margin-bottom: 10rpx;
}

.news-title {
  display: block;
  padding: 0 10rpx;
  font-size: 14px;
  background-color: #fff;

}